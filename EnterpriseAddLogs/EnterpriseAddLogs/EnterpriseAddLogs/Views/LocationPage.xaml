<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnterpriseAddLogs.Views.LocationPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Test Location related Services." />
            <Label Text="Longitude:"/>
            <Label x:Name="LongitudeValue" Text="{Binding Longitude, Mode=TwoWay }"/>
            <Label Text="Latitude:"/>
            <Label x:Name="LatitudeValue" Text="{Binding Latitude, Mode=TwoWay }"/>
            <Label Text="Speed:"/>
            <Label x:Name="SpeedValue" Text="{Binding Speed, Mode=TwoWay }"/>
            <Label x:Name="AddressValue"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
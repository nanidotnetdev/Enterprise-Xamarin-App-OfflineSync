<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EnterpriseAddLogs.Views.SpeechRecogPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Command="{Binding StartSpeechRecog}"  Text="Start"></Button>
            <Button Command="{Binding StopSpeechRecog}" Text="Stop" Style="{StaticResource btnPrimary}"></Button>
            <Label Text="{Binding Comment}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="EnterpriseAddLogs.Views.DayLogCreatePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:EnterpriseAddLogs.Helpers">

    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding SaveCommand}" Text="Save">
            <ToolbarItem.Icon>
                <OnPlatform x:TypeArguments="FileImageSource">
                    <On Platform="UWP" Value="save.png" />
                </OnPlatform>
            </ToolbarItem.Icon>
        </ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <ScrollView Margin="10">

            <StackLayout>
                <Label Text="Comment" />
                <Editor Placeholder="Enter Comment" Text="{Binding Comment}" />

                <Label Text="Date" />
                <DatePicker Date="{Binding DateLogged}" />

                <Label Text="Time" />
                <Picker ItemsSource="{Binding DayLogTimes}"
                        ItemDisplayBinding="{Binding Text}" SelectedItem="{Binding DayLogTimeSelected, Mode=TwoWay}"></Picker>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>